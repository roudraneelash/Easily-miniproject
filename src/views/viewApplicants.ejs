<div class="container mt-3">
  <h1 class="m-1">Job Title: <%= jobData? jobData.jobTitle : "" %></h1>
  <a type="button" class="btn btn-primary" href="/jobs/apply/<%= id%>"
    >Add Applicant</a
  >
  <table class="table table-hover mt-3">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Resume</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% if (jobData && jobData.applicants.length > 0) { %> <%
      jobData.applicants.forEach((applicant, index) => { %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= applicant.name %></td>
        <td><%= applicant.email %></td>
        <td>
          <a
            type="button"
            class="btn btn-light"
            target="_blank"
            href="/jobs/<%= id %>/applicants/<%= index %>/view"
          >
            <i class="fas fa-eye"></i>
          </a>
        </td>
        <td>
          <a
            type="button"
            class="btn btn-success"
            href="/jobs/<%= id %>/applicants/<%= index %>/edit"
          >
            <i class="fa-solid fa-pen-to-square"></i>
          </a>
        </td>
        <td>
          <a
            type="button"
            class="btn btn-danger"
            href="/jobs/<%= id %>/applicants/<%= index %>/delete"
          >
            <i class="fa-solid fa-trash"></i>
          </a>
        </td>
      </tr>
      <% }); %> <% } else { %>
      <tr>
        <td colspan="6">
          <p>No Applicants Applied</p>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
